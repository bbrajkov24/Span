@model List<Podaci>

<div class="py-3 alert @(@ViewBag.errorMessage.Contains("unique rows inserted") ? "alert-primary": "alert-danger")" role="alert">
    @ViewBag.errorMessage
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
            @{ int rowNo = 0; }
            @foreach (var podatak in Model)
            {
                <tr>
                    <th scope="row">@(rowNo += 1)</th>
                    <td>@podatak.Ime</td>
                    <td>@podatak.Prezime</td>
                    <td>@podatak.PBr</td>
                    <td>@podatak.Grad</td>
                    <td>@podatak.Telefon</td>
                </tr>
            }
        </tbody>
    </table>
</div>
